<?xml version="1.0"?>
<launch>

  <arg name="robot_namespace" default="/"/>
    
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/> 
  <arg name="yaw" default="0.0"/>
  
  <!-- Optionally disable teleop control -->
  <arg name="joystick" default="true" />

  <group ns="$(arg robot_namespace)">
  
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find deltaxl_description)/urdf/deltaXL.urdf.xacro" />

    <include file="$(find deltaxl_control)/launch/control.launch">
    </include>
    
    <include file="$(find deltaxl_control)/launch/teleop.launch">
      <arg name="joystick" value="$(arg joystick)" />
    </include>
    
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" /> 

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  
        args="-x $(arg x_pos)
              -y $(arg y_pos)
              -z $(arg z_pos)
              -Y $(arg yaw)
              -unpause
              -urdf 
              -param robot_description
              -model $(arg robot_namespace)" />

  </group>

</launch>
