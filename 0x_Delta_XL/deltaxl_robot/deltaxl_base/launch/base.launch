<launch>
    <arg name="robot_namespace" default="/"/>

    <arg name="port" default="/dev/ttyRobotBase" />

    <arg name="joystick" default="true" />
    
    <!-- DeltaXL harware driver -->
    <node pkg="deltaxl_base" type="deltaxl_node" name="deltaxl_node">
        <rosparam subst_value="true">
            port: $(arg port)

            control_frequency: 10.0
            diagnostic_frequency: 1.0

            max_acceleration: 1.0
            max_speed: 1.0
            wheel_diameter: 0.44
            polling_timeout: 10.0
        </rosparam>
    </node>

    <param name="robot_description" command="$(find xacro)/xacro '$(find deltaxl_description)/urdf/deltaXL.urdf.xacro'
      robot_namespace:=$(arg robot_namespace)" />

    <!-- Differential controller parameters and basic localization -->
    <include file="$(find deltaxl_control)/launch/control.launch" />

    <!--Teleop -->
    <include file="$(find deltaxl_control)/launch/teleop.launch">
      <arg name="joystick" value="$(arg joystick)" />
    </include>
    
    <!-- IMU -->
    <include file="$(find deltaxl_bringup)/launch/um7_config/um7.launch" />
    
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    </node>
    
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

</launch>
